# ===================================
# CONFIGURACIÓN DEL SERVIDOR
# ===================================
PORT=3000
NODE_ENV=development

# ===================================
# BASE DE DATOS
# ===================================
# Por defecto usa memoria. Configura según tu necesidad:

# Tipo de base de datos: memory | mongodb | postgresql
DB_TYPE=memory

# --- MongoDB ---
# MONGODB_URI=mongodb://localhost:27017/gestion_visitas
# MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/gestion_visitas

# --- PostgreSQL ---
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=gestion_visitas
# DB_USER=postgres
# DB_PASSWORD=tu_password

# ===================================
# CORS (Frontend URLs permitidas)
# ===================================
# CORS_ORIGIN=http://localhost:4200,http://localhost:8080

# ===================================
# AUTENTICACIÓN (Opcional - para implementar)
# ===================================
# JWT_SECRET=tu_clave_secreta_super_segura_cambiar_en_produccion
# JWT_EXPIRES_IN=24h
# JWT_REFRESH_EXPIRES_IN=7d

# ===================================
# CONFIGURACIÓN DE VISITAS
# ===================================
# Reiniciar contador de visitas diariamente
AUTO_RESET_DAILY=false

# Número máximo de visitas simultáneas
MAX_VISITAS_SIMULTANEAS=100

# Tiempo de expiración de visitas en espera (minutos)
VISITA_TIMEOUT_MINUTOS=60

# ===================================
# LOGS Y MONITOREO
# ===================================
LOG_LEVEL=info
# LOG_FILE=logs/app.log

# ===================================
# NOTIFICACIONES (Opcional - para implementar)
# ===================================
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=tu_email@gmail.com
# EMAIL_PASSWORD=tu_password
# EMAIL_FROM=noreply@tudominio.com

# SMS_API_KEY=tu_api_key
# SMS_API_URL=https://api.sms-provider.com

# ===================================
# OTROS
# ===================================
# Zona horaria
TZ=America/Mexico_City

# URL base de la aplicación
# APP_URL=http://localhost:3000
